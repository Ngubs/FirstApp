@model Student

<div class="container">
    <h3>Delete Record</h3>

    <form method="post">
        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" type="text" class="form-control" disabled>
        </div><div class="mb-3">
            <label asp-for="Surname" class="form-label"></label>
            <input type="text" class="form-control" asp-for="Surname" disabled>
        </div><div class="mb-3">
            <label asp-for="Email" class="form-label"></label>
            <input type="text" class="form-control" asp-for="Email" disabled>
        </div>
        <div class="mb-3">
            <label asp-for="Phone" class="form-label"></label>
            <input asp-for="Phone" type="text" class="form-control" disabled>
        </div>

        <button type="submit" class="btn btn-danger">Delete</button>
    </form>
</div>

